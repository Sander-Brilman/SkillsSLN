<dialog open="@Show" popover>
    @ChildContent
</dialog>

<style>
    dialog {
        box-shadow: 0px 0px 0px 100vw rgba(0,0,0, 50%);
        padding: 30px;
        border: none;
        z-index: 1;
    }
</style>


@code {
    [Parameter]
    public bool Show { get; set; }

    [Parameter]
    public EventCallback<bool> ShowChanged { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }
}
