@page "/{Lang}"
@inject NavigationManager _navManager;

<PageTitle>Index</PageTitle>


<label class="d-block mb-2">
    @(Lang == "nl" ? "schijven" : "discs"):
    <input type="number" @bind="discs" class="form-control" min="1" max="100" />
</label>

<button class="btn btn-success" @onclick="Redirect">
    <span class="oi oi-circle-check"></span>
    Start!
</button>


@code {
    public string Lang { get; set; } = "nl";

    int discs = 8;

    void Redirect()
    {
        EventCallback.Factory.

        _navManager.NavigateTo($"/play/{Lang}?Discs={discs}");
    }
}